<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - DigiBoard Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                DigiBoard Admin
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/schedule">
                            <i class="fas fa-calendar-alt me-1"></i>Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/lectures">
                            <i class="fas fa-book me-1"></i>Lectures
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/teachers">
                            <i class="fas fa-users me-1"></i>Teachers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/quick-update">
                            <i class="fas fa-bolt me-1"></i>Quick Update
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            <%= user || 'Admin' %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <!-- Welcome Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 bg-gradient-primary text-white">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <h2 class="card-title mb-1">
                                    <i class="fas fa-tachometer-alt me-2"></i>
                                    Welcome to DigiBoard Admin
                                </h2>
                                <p class="card-text mb-0">
                                    Manage schedules, teachers, and lectures for all classrooms
                                </p>
                                <small class="text-white-50">
                                    Last updated: <%= moment().format('dddd, MMMM Do YYYY, h:mm A') %>
                                </small>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-school fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-gradient-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-bolt me-2"></i>Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <button type="button" class="btn btn-primary btn-lg w-100" data-bs-toggle="modal" data-bs-target="#quickLectureModal">
                                    <i class="fas fa-plus me-2"></i>
                                    Add Lecture
                                </button>
                            </div>
                            <div class="col-md-4">
                                <button type="button" class="btn btn-success btn-lg w-100" data-bs-toggle="modal" data-bs-target="#quickTeacherModal">
                                    <i class="fas fa-user-plus me-2"></i>
                                    Add Teacher
                                </button>
                            </div>
                            <div class="col-md-4">
                                <a href="/bulk-import" class="btn btn-info btn-lg w-100">
                                    <i class="fas fa-file-import me-2"></i>
                                    Bulk Import
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card stats-card border-0 h-100">
                    <div class="card-body text-center">
                        <div class="stats-icon bg-primary">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3 class="stats-number"><%= stats.totalTeachers %></h3>
                        <p class="stats-label">Total Teachers</p>
                        <a href="/teachers" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>View All
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-3">
                <div class="card stats-card border-0 h-100">
                    <div class="card-body text-center">
                        <div class="stats-icon bg-success">
                            <i class="fas fa-book"></i>
                        </div>
                        <h3 class="stats-number"><%= stats.totalLectures %></h3>
                        <p class="stats-label">Total Lectures</p>
                        <a href="/lectures" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-eye me-1"></i>View All
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-3">
                <div class="card stats-card border-0 h-100">
                    <div class="card-body text-center">
                        <div class="stats-icon bg-warning">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h3 class="stats-number"><%= stats.activeLectures %></h3>
                        <p class="stats-label">Active Lectures</p>
                        <a href="/schedule" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-calendar me-1"></i>View Schedule
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-3">
                <div class="card stats-card border-0 h-100">
                    <div class="card-body text-center">
                        <div class="stats-icon bg-info">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3 class="stats-number">
                            <% if (stats.nextLecture) { %>
                                <small class="text-success">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Scheduled
                                </small>
                            <% } else { %>
                                <small class="text-muted">
                                    <i class="fas fa-minus-circle me-1"></i>
                                    None
                                </small>
                            <% } %>
                        </h3>
                        <p class="stats-label">Next Lecture</p>
                        <a href="/quick-update" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-bolt me-1"></i>Quick Update
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Next Lecture & Quick Actions -->
        <div class="row">
            <!-- Next Lecture -->
            <div class="col-md-8 mb-4">
                <div class="card border-0">
                    <div class="card-header bg-transparent">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-clock me-2 text-primary"></i>
                            Next Upcoming Lecture
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (stats.nextLecture) { %>
                            <div class="next-lecture-card">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h4 class="mb-1 text-primary"><%= stats.nextLecture.subject %></h4>
                                        <p class="mb-1">
                                            <i class="fas fa-user me-2"></i>
                                            <strong><%= stats.nextLecture.teacher?.name || 'TBA' %></strong>
                                        </p>
                                        <p class="mb-1">
                                            <i class="fas fa-map-marker-alt me-2"></i>
                                            Room <%= stats.nextLecture.classroom %>
                                        </p>
                                        <p class="mb-1">
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= stats.nextLecture.dayOfWeek %>
                                        </p>
                                        <% if (stats.nextLecture.chapter) { %>
                                            <p class="mb-0 text-muted">
                                                <i class="fas fa-bookmark me-2"></i>
                                                Chapter: <%= stats.nextLecture.chapter %>
                                            </p>
                                        <% } %>
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <div class="time-display">
                                            <div class="time-label">Time</div>
                                            <div class="time-value">
                                                <%= moment(stats.nextLecture.startTime).format('h:mm A') %> - 
                                                <%= moment(stats.nextLecture.endTime).format('h:mm A') %>
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <span class="badge bg-<%= stats.nextLecture.lectureType === 'Lab' ? 'warning' : stats.nextLecture.lectureType === 'Tutorial' ? 'info' : 'primary' %>">
                                                <%= stats.nextLecture.lectureType %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No upcoming lectures scheduled</h5>
                                <p class="text-muted">Add lectures to see them here</p>
                                <a href="/lectures/add" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>Add First Lecture
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-md-4 mb-4">
                <div class="card border-0">
                    <div class="card-header bg-transparent">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-bolt me-2 text-warning"></i>
                            Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/lectures/add" class="btn btn-outline-primary">
                                <i class="fas fa-plus me-2"></i>Add New Lecture
                            </a>
                            <a href="/teachers/add" class="btn btn-outline-success">
                                <i class="fas fa-user-plus me-2"></i>Add New Teacher
                            </a>
                            <a href="/schedule" class="btn btn-outline-info">
                                <i class="fas fa-calendar-alt me-2"></i>View Full Schedule
                            </a>
                            <a href="/quick-update" class="btn btn-outline-warning">
                                <i class="fas fa-edit me-2"></i>Quick Update
                            </a>
                        </div>
                        
                        <hr class="my-3">
                        
                        <div class="text-center">
                            <h6 class="text-muted mb-2">System Status</h6>
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>
                                All Systems Online
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Schedule -->
        <% if (stats.todaySchedule && stats.todaySchedule.length > 0) { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0">
                    <div class="card-header bg-transparent">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-calendar-day me-2 text-success"></i>
                            Today's Schedule
                            <small class="text-muted ms-2">(<%= moment().format('dddd, MMMM Do YYYY') %>)</small>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% stats.todaySchedule.forEach((lecture, index) => { %>
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100 border-start border-4 border-<%= lecture.lectureType === 'Lab' ? 'warning' : lecture.lectureType === 'Tutorial' ? 'info' : 'primary' %>">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title mb-0 text-primary">
                                                    <%= lecture.subject %>
                                                </h6>
                                                <span class="badge bg-<%= lecture.lectureType === 'Lab' ? 'warning' : lecture.lectureType === 'Tutorial' ? 'info' : 'primary' %> text-dark">
                                                    <%= lecture.lectureType %>
                                                </span>
                                            </div>
                                            
                                            <div class="small text-muted mb-2">
                                                <div class="mb-1">
                                                    <i class="fas fa-user me-1"></i>
                                                    <%= lecture.teacher?.name || 'TBA' %>
                                                </div>
                                                <div class="mb-1">
                                                    <i class="fas fa-clock me-1"></i>
                                                    <%= moment(lecture.startTime).format('h:mm A') %> - <%= moment(lecture.endTime).format('h:mm A') %>
                                                </div>
                                                <div class="mb-1">
                                                    <i class="fas fa-map-marker-alt me-1"></i>
                                                    Room <%= lecture.classroom %>
                                                </div>
                                                <% if (lecture.semester) { %>
                                                <div class="mb-1">
                                                    <i class="fas fa-graduation-cap me-1"></i>
                                                    <%= lecture.semester %>
                                                </div>
                                                <% } %>
                                                <% if (lecture.chapter) { %>
                                                <div>
                                                    <i class="fas fa-bookmark me-1"></i>
                                                    Ch: <%= lecture.chapter %>
                                                </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                        
                        <div class="text-center mt-3">
                            <a href="/schedule" class="btn btn-outline-primary">
                                <i class="fas fa-calendar me-1"></i>
                                View Full Schedule
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } else { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-calendar-times fa-2x text-muted mb-3"></i>
                        <h6 class="text-muted">No lectures scheduled for today</h6>
                        <p class="text-muted small mb-0">Enjoy your free day!</p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5 py-3 bg-light">
        <div class="container">
            <div class="text-center text-muted">
                <small>&copy; <%= new Date().getFullYear() %> DigiBoard Admin Dashboard. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <!-- Quick Lecture Modal -->
    <div class="modal fade" id="quickLectureModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-plus me-2"></i>Add New Lecture
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="quickLectureForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="qlSubject" class="form-label">Subject *</label>
                                <input type="text" class="form-control" id="qlSubject" name="subject" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="qlTeacher" class="form-label">Teacher *</label>
                                <select class="form-select" id="qlTeacher" name="teacher" required>
                                    <option value="">Select Teacher</option>
                                    <% teachers.forEach(teacher => { %>
                                        <option value="<%= teacher._id %>"><%= teacher.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="qlClassroom" class="form-label">Classroom *</label>
                                <input type="text" class="form-control" id="qlClassroom" name="classroom" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="qlDayOfWeek" class="form-label">Day *</label>
                                <select class="form-select" id="qlDayOfWeek" name="dayOfWeek" required>
                                    <option value="">Select Day</option>
                                    <option value="Monday">Monday</option>
                                    <option value="Tuesday">Tuesday</option>
                                    <option value="Wednesday">Wednesday</option>
                                    <option value="Thursday">Thursday</option>
                                    <option value="Friday">Friday</option>
                                    <option value="Saturday">Saturday</option>
                                    <option value="Sunday">Sunday</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="qlStartTime" class="form-label">Start Time *</label>
                                <input type="time" class="form-control" id="qlStartTime" name="startTime" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="qlEndTime" class="form-label">End Time *</label>
                                <input type="time" class="form-control" id="qlEndTime" name="endTime" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="qlSemester" class="form-label">Semester</label>
                                <select class="form-select" id="qlSemester" name="semester">
                                    <option value="I">I</option>
                                    <option value="II">II</option>
                                    <option value="III">III</option>
                                    <option value="IV">IV</option>
                                    <option value="V">V</option>
                                    <option value="VI">VI</option>
                                    <option value="VII">VII</option>
                                    <option value="VIII">VIII</option>
                                    <option value="IX">IX</option>
                                    <option value="X">X</option>
                                    <option value="XI" selected>XI</option>
                                    <option value="XII">XII</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="qlCourse" class="form-label">Course Code</label>
                                <input type="text" class="form-control" id="qlCourse" name="course" placeholder="e.g., CS101">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Save Lecture
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Quick Teacher Modal -->
    <div class="modal fade" id="quickTeacherModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-user-plus me-2"></i>Add New Teacher
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="quickTeacherForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="qtName" class="form-label">Full Name *</label>
                            <input type="text" class="form-control" id="qtName" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="qtEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="qtEmail" name="email">
                        </div>
                        <div class="mb-3">
                            <label for="qtPhone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="qtPhone" name="phone">
                        </div>
                        <div class="mb-3">
                            <label for="qtDepartment" class="form-label">Department</label>
                            <input type="text" class="form-control" id="qtDepartment" name="department">
                        </div>
                        <div class="mb-3">
                            <label for="qtSubjects" class="form-label">Subjects (comma-separated)</label>
                            <input type="text" class="form-control" id="qtSubjects" name="subjects" placeholder="e.g., Mathematics, Physics">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Save Teacher
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
    
    <!-- Quick Actions JavaScript -->
    <script>
        // Quick Lecture Form Submission
        document.getElementById('quickLectureForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            
            try {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Saving...';
                submitBtn.disabled = true;
                
                const response = await fetch('/lectures/save', {
                    method: 'POST',
                    body: formData
                });
                
                if (response.ok) {
                    // Success - redirect will be handled by server
                    window.location.href = '/lectures?success=lecture_saved_quickly';
                } else {
                    throw new Error('Failed to save lecture');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error saving lecture. Please try again.');
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });

        // Quick Teacher Form Submission
        document.getElementById('quickTeacherForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            
            try {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Saving...';
                submitBtn.disabled = true;
                
                const response = await fetch('/teachers/save', {
                    method: 'POST',
                    body: formData
                });
                
                if (response.ok) {
                    // Success - redirect will be handled by server  
                    window.location.href = '/teachers?success=teacher_saved_quickly';
                } else {
                    throw new Error('Failed to save teacher');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error saving teacher. Please try again.');
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });

        // Auto-fill course code based on subject
        document.getElementById('qlSubject').addEventListener('input', function() {
            const subject = this.value.toLowerCase();
            const courseField = document.getElementById('qlCourse');
            
            if (!courseField.value) { // Only auto-fill if course field is empty
                if (subject.includes('math')) courseField.value = 'MATH101';
                else if (subject.includes('physics')) courseField.value = 'PHY101';
                else if (subject.includes('chemistry')) courseField.value = 'CHEM101';
                else if (subject.includes('english')) courseField.value = 'ENG101';
                else if (subject.includes('computer')) courseField.value = 'CS101';
                else if (subject.includes('biology')) courseField.value = 'BIO101';
            }
        });

        // Time validation
        document.getElementById('qlStartTime').addEventListener('change', validateTimes);
        document.getElementById('qlEndTime').addEventListener('change', validateTimes);
        
        function validateTimes() {
            const startTime = document.getElementById('qlStartTime').value;
            const endTime = document.getElementById('qlEndTime').value;
            
            if (startTime && endTime && startTime >= endTime) {
                document.getElementById('qlEndTime').setCustomValidity('End time must be after start time');
            } else {
                document.getElementById('qlEndTime').setCustomValidity('');
            }
        }
    </script>
</body>
</html>
