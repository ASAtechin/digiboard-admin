<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - DigiBoard Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                DigiBoard Admin
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/schedule">
                            <i class="fas fa-calendar-alt me-1"></i>Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/lectures">
                            <i class="fas fa-book me-1"></i>Lectures
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/teachers">
                            <i class="fas fa-users me-1"></i>Teachers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/quick-update">
                            <i class="fas fa-bolt me-1"></i>Quick Update
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            <%= user || 'Admin' %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <!-- Welcome Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 bg-gradient-primary text-white">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <h2 class="card-title mb-1">
                                    <i class="fas fa-tachometer-alt me-2"></i>
                                    Welcome to DigiBoard Admin
                                </h2>
                                <p class="card-text mb-0">
                                    Manage schedules, teachers, and lectures for all classrooms
                                </p>
                                <small class="text-white-50">
                                    Last updated: <%= moment().format('dddd, MMMM Do YYYY, h:mm A') %>
                                </small>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-school fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card stats-card border-0 h-100">
                    <div class="card-body text-center">
                        <div class="stats-icon bg-primary">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3 class="stats-number"><%= stats.totalTeachers %></h3>
                        <p class="stats-label">Total Teachers</p>
                        <a href="/teachers" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>View All
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-3">
                <div class="card stats-card border-0 h-100">
                    <div class="card-body text-center">
                        <div class="stats-icon bg-success">
                            <i class="fas fa-book"></i>
                        </div>
                        <h3 class="stats-number"><%= stats.totalLectures %></h3>
                        <p class="stats-label">Total Lectures</p>
                        <a href="/lectures" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-eye me-1"></i>View All
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-3">
                <div class="card stats-card border-0 h-100">
                    <div class="card-body text-center">
                        <div class="stats-icon bg-warning">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h3 class="stats-number"><%= stats.activeLectures %></h3>
                        <p class="stats-label">Active Lectures</p>
                        <a href="/schedule" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-calendar me-1"></i>View Schedule
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-3">
                <div class="card stats-card border-0 h-100">
                    <div class="card-body text-center">
                        <div class="stats-icon bg-info">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3 class="stats-number">
                            <% if (stats.nextLecture) { %>
                                <small class="text-success">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Scheduled
                                </small>
                            <% } else { %>
                                <small class="text-muted">
                                    <i class="fas fa-minus-circle me-1"></i>
                                    None
                                </small>
                            <% } %>
                        </h3>
                        <p class="stats-label">Next Lecture</p>
                        <a href="/quick-update" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-bolt me-1"></i>Quick Update
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Next Lecture & Quick Actions -->
        <div class="row">
            <!-- Next Lecture -->
            <div class="col-md-8 mb-4">
                <div class="card border-0">
                    <div class="card-header bg-transparent">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-clock me-2 text-primary"></i>
                            Next Upcoming Lecture
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (stats.nextLecture) { %>
                            <div class="next-lecture-card">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h4 class="mb-1 text-primary"><%= stats.nextLecture.subject %></h4>
                                        <p class="mb-1">
                                            <i class="fas fa-user me-2"></i>
                                            <strong><%= stats.nextLecture.teacher?.name || 'TBA' %></strong>
                                        </p>
                                        <p class="mb-1">
                                            <i class="fas fa-map-marker-alt me-2"></i>
                                            Room <%= stats.nextLecture.classroom %>
                                        </p>
                                        <p class="mb-1">
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= stats.nextLecture.dayOfWeek %>
                                        </p>
                                        <% if (stats.nextLecture.chapter) { %>
                                            <p class="mb-0 text-muted">
                                                <i class="fas fa-bookmark me-2"></i>
                                                Chapter: <%= stats.nextLecture.chapter %>
                                            </p>
                                        <% } %>
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <div class="time-display">
                                            <div class="time-label">Time</div>
                                            <div class="time-value">
                                                <%= moment(stats.nextLecture.startTime).format('h:mm A') %> - 
                                                <%= moment(stats.nextLecture.endTime).format('h:mm A') %>
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <span class="badge bg-<%= stats.nextLecture.lectureType === 'Lab' ? 'warning' : stats.nextLecture.lectureType === 'Tutorial' ? 'info' : 'primary' %>">
                                                <%= stats.nextLecture.lectureType %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No upcoming lectures scheduled</h5>
                                <p class="text-muted">Add lectures to see them here</p>
                                <a href="/lectures/add" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>Add First Lecture
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-md-4 mb-4">
                <div class="card border-0">
                    <div class="card-header bg-transparent">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-bolt me-2 text-warning"></i>
                            Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/lectures/add" class="btn btn-outline-primary">
                                <i class="fas fa-plus me-2"></i>Add New Lecture
                            </a>
                            <a href="/teachers/add" class="btn btn-outline-success">
                                <i class="fas fa-user-plus me-2"></i>Add New Teacher
                            </a>
                            <a href="/schedule" class="btn btn-outline-info">
                                <i class="fas fa-calendar-alt me-2"></i>View Full Schedule
                            </a>
                            <a href="/quick-update" class="btn btn-outline-warning">
                                <i class="fas fa-edit me-2"></i>Quick Update
                            </a>
                        </div>
                        
                        <hr class="my-3">
                        
                        <div class="text-center">
                            <h6 class="text-muted mb-2">System Status</h6>
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>
                                All Systems Online
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5 py-3 bg-light">
        <div class="container">
            <div class="text-center text-muted">
                <small>&copy; <%= new Date().getFullYear() %> DigiBoard Admin Dashboard. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>
