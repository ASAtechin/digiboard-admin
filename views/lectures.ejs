<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lectures - DigiBoard Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                DigiBoard Admin
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/schedule">
                            <i class="fas fa-calendar-alt me-1"></i>Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/lectures">
                            <i class="fas fa-book me-1"></i>Lectures
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/teachers">
                            <i class="fas fa-users me-1"></i>Teachers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/quick-update">
                            <i class="fas fa-bolt me-1"></i>Quick Update
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            <%= user || 'Admin' %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <!-- Error/Success Messages -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Error:</strong> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                <strong>Success:</strong> 
                <% if (success === 'lecture_saved') { %>
                    Lecture has been saved successfully!
                <% } else { %>
                    <%= success %>
                <% } %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2><i class="fas fa-book me-2 text-primary"></i>Lectures Management</h2>
                        <p class="text-muted mb-0">Manage lecture schedules and details</p>
                    </div>
                    <div>
                        <a href="/lectures/add" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Add New Lecture
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters, Search & Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-filter me-2"></i>Filters & Search
                        </h6>
                        <span class="text-muted">
                            Total Lectures: <strong><%= lectures.length %></strong>
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-lg-4 col-md-6">
                                <label class="form-label">Search</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-search"></i>
                                    </span>
                                    <input type="text" class="form-control" id="searchInput" placeholder="Search subject, teacher, or room...">
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-3">
                                <label class="form-label">Day</label>
                                <select class="form-select" id="dayFilter">
                                    <option value="">All Days</option>
                                    <option value="Monday">Monday</option>
                                    <option value="Tuesday">Tuesday</option>
                                    <option value="Wednesday">Wednesday</option>
                                    <option value="Thursday">Thursday</option>
                                    <option value="Friday">Friday</option>
                                    <option value="Saturday">Saturday</option>
                                    <option value="Sunday">Sunday</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-3">
                                <label class="form-label">Semester</label>
                                <select class="form-select" id="semesterFilter">
                                    <option value="">All Semesters</option>
                                    <option value="I">I</option>
                                    <option value="II">II</option>
                                    <option value="XI">XI</option>
                                    <option value="XII">XII</option>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-6">
                                <label class="form-label">Teacher</label>
                                <select class="form-select" id="teacherFilter">
                                    <option value="">All Teachers</option>
                                    <% teachers.forEach(teacher => { %>
                                        <option value="<%= teacher._id %>"><%= teacher.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-lg-2 col-md-6">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearFilters()" title="Clear all filters">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#quickLectureModal" title="Add new lecture">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bulk Actions Panel -->
        <div class="row mb-3" id="bulkActionsRow" style="display: none;">
            <div class="col-12">
                <div class="alert alert-primary border-0 shadow-sm d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle me-2 text-primary"></i>
                        <strong><span id="selectedCount">0</span></strong>
                        <span class="ms-1">lecture(s) selected</span>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="bulkDelete()" title="Delete selected lectures">
                            <i class="fas fa-trash me-1"></i>Delete
                        </button>
                        <button type="button" class="btn btn-outline-warning btn-sm" onclick="bulkToggleStatus()" title="Toggle status of selected lectures">
                            <i class="fas fa-toggle-on me-1"></i>Toggle Status
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearSelection()" title="Clear selection">
                            <i class="fas fa-times me-1"></i>Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lectures Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Lectures List
                    </h6>
                    <small class="text-muted">
                        <span id="visibleCount"><%= lectures.length %></span> of <%= lectures.length %> lectures
                    </small>
                </div>
            </div>
            <div class="card-body p-0">
                <% if (lectures.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 40px;">
                                        <input type="checkbox" id="selectAll" class="form-check-input" title="Select all lectures">
                                    </th>
                                    <th class="sortable" style="min-width: 200px;">
                                        <i class="fas fa-book me-1"></i>Subject
                                    </th>
                                    <th class="sortable" style="min-width: 150px;">
                                        <i class="fas fa-user me-1"></i>Teacher
                                    </th>
                                    <th class="sortable" style="width: 100px;">
                                        <i class="fas fa-calendar me-1"></i>Day
                                    </th>
                                    <th class="sortable" style="width: 120px;">
                                        <i class="fas fa-clock me-1"></i>Time
                                    </th>
                                    <th style="width: 100px;">
                                        <i class="fas fa-map-marker-alt me-1"></i>Room
                                    </th>
                                    <th style="width: 80px;">
                                        <i class="fas fa-graduation-cap me-1"></i>Sem
                                    </th>
                                    <th style="width: 80px;">
                                        <i class="fas fa-toggle-on me-1"></i>Status
                                    </th>
                                    <th style="width: 120px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% lectures.forEach(function(lecture) { %>
                                    <tr class="lecture-row" 
                                        data-day="<%= lecture.dayOfWeek %>"
                                        data-semester="<%= lecture.semester || '' %>"
                                        data-teacher-id="<%= lecture.teacher ? lecture.teacher._id : '' %>"
                                        data-teacher-name="<%= lecture.teacher ? lecture.teacher.name.toLowerCase() : '' %>"
                                        data-subject="<%= lecture.subject.toLowerCase() %>"
                                        data-classroom="<%= lecture.classroom.toLowerCase() %>">
                                        <td>
                                            <input type="checkbox" 
                                                   class="form-check-input lecture-checkbox" 
                                                   value="<%= lecture._id %>">
                                        </td>
                                        <td>
                                            <div>
                                                <strong><%= lecture.subject %></strong>
                                                <% if (lecture.chapter) { %>
                                                    <br><small class="text-muted">Chapter: <%= lecture.chapter %></small>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (lecture.teacher) { %>
                                                <div>
                                                    <strong><%= lecture.teacher.name %></strong>
                                                    <br><small class="text-muted"><%= lecture.teacher.department %></small>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">TBA</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <span class="badge bg-info"><%= lecture.dayOfWeek %></span>
                                        </td>
                                        <td>
                                            <div class="lecture-time">
                                                <%= moment(lecture.startTime).format('h:mm A') %> - 
                                                <%= moment(lecture.endTime).format('h:mm A') %>
                                            </div>
                                        </td>
                                        <td>
                                            <i class="fas fa-map-marker-alt me-1"></i>
                                            <%= lecture.classroom %>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <%= lecture.semester || 'N/A' %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (lecture.isActive) { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>Active
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-pause-circle me-1"></i>Inactive
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/lectures/edit/<%= lecture._id %>" 
                                                   class="btn btn-outline-primary" 
                                                   title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="POST" 
                                                      action="/lectures/delete/<%= lecture._id %>" 
                                                      class="d-inline"
                                                      onsubmit="return confirm('Are you sure you want to delete this lecture?')">
                                                    <button type="submit" 
                                                            class="btn btn-outline-danger btn-delete" 
                                                            title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-book fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Lectures Found</h4>
                        <p class="text-muted">Add your first lecture to get started</p>
                        <a href="/lectures/add" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Add First Lecture
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5 py-3 bg-light">
        <div class="container">
            <div class="text-center text-muted">
                <small>&copy; <%= new Date().getFullYear() %> DigiBoard Admin Dashboard. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
    
    <script>
        // Enhanced filter functionality with visible count update
        function updateVisibleCount() {
            const visibleRows = document.querySelectorAll('.lecture-row:not([style*="display: none"])').length;
            document.getElementById('visibleCount').textContent = visibleRows;
        }

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('.lecture-row');
            
            rows.forEach(function(row) {
                const subject = row.dataset.subject || '';
                const teacherName = row.dataset.teacherName || '';
                const classroom = row.dataset.classroom || '';
                
                const isVisible = subject.includes(searchTerm) || 
                                teacherName.includes(searchTerm) || 
                                classroom.includes(searchTerm);
                
                row.style.display = isVisible ? '' : 'none';
            });
            
            updateVisibleCount();
        });

        // Day filter functionality
        document.getElementById('dayFilter').addEventListener('change', function() {
            const selectedDay = this.value;
            const rows = document.querySelectorAll('.lecture-row');
            
            rows.forEach(function(row) {
                const isVisible = selectedDay === '' || row.dataset.day === selectedDay;
                row.style.display = isVisible ? '' : 'none';
            });
            
            updateVisibleCount();
        });

        // Semester filter functionality
        document.getElementById('semesterFilter').addEventListener('change', function() {
            const selectedSemester = this.value;
            const rows = document.querySelectorAll('.lecture-row');
            
            rows.forEach(function(row) {
                const isVisible = selectedSemester === '' || row.dataset.semester === selectedSemester;
                row.style.display = isVisible ? '' : 'none';
            });
            
            updateVisibleCount();
        });

        // Teacher filter functionality
        document.getElementById('teacherFilter').addEventListener('change', function() {
            const selectedTeacher = this.value;
            const rows = document.querySelectorAll('.lecture-row');
            
            rows.forEach(function(row) {
                const isVisible = selectedTeacher === '' || row.getAttribute('data-teacher-id') === selectedTeacher;
                row.style.display = isVisible ? '' : 'none';
            });
            
            updateVisibleCount();
        });

        // Clear all filters
        function clearFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('dayFilter').value = '';
            document.getElementById('semesterFilter').value = '';
            document.getElementById('teacherFilter').value = '';
            
            document.querySelectorAll('.lecture-row').forEach(function(row) {
                row.style.display = '';
            });
            
            updateVisibleCount();
        }

        // Update bulk action form with selected lecture IDs
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('lecture-checkbox') || e.target.id === 'selectAll') {
                const checkedBoxes = document.querySelectorAll('.lecture-checkbox:checked');
                const lectureIds = Array.from(checkedBoxes).map(cb => cb.value);
                
                // Update selected count and show/hide bulk actions
                const selectedCount = checkedBoxes.length;
                document.getElementById('selectedCount').textContent = selectedCount;
                
                const bulkActionsRow = document.getElementById('bulkActionsRow');
                if (selectedCount > 0) {
                    bulkActionsRow.style.display = 'block';
                } else {
                    bulkActionsRow.style.display = 'none';
                }
            }
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            updateVisibleCount();
        });
    </script>
</body>
</html>
