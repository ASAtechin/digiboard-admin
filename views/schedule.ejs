<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Schedule - DigiBoard Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                DigiBoard Admin
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/schedule">
                            <i class="fas fa-calendar-alt me-1"></i>Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/lectures">
                            <i class="fas fa-book me-1"></i>Lectures
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/teachers">
                            <i class="fas fa-users me-1"></i>Teachers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/quick-update">
                            <i class="fas fa-bolt me-1"></i>Quick Update
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            <%= user || 'Admin' %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2><i class="fas fa-calendar-alt me-2 text-primary"></i>Schedule Overview</h2>
                        <p class="text-muted mb-0">View and manage all lecture schedules</p>
                    </div>
                    <div>
                        <div class="btn-group">
                            <a href="/lectures/add" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Add Lecture
                            </a>
                            <a href="/quick-update" class="btn btn-outline-warning">
                                <i class="fas fa-bolt me-1"></i>Quick Update
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Schedule Tabs -->
        <ul class="nav nav-tabs mb-4" id="scheduleTabs">
            <li class="nav-item">
                <a class="nav-link active" id="today-tab" data-bs-toggle="tab" href="#today">
                    <i class="fas fa-calendar-day me-1"></i>Today's Schedule
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="week-tab" data-bs-toggle="tab" href="#week">
                    <i class="fas fa-calendar-week me-1"></i>Weekly Schedule
                </a>
            </li>
        </ul>

        <div class="tab-content" id="scheduleTabContent">
            <!-- Today's Schedule -->
            <div class="tab-pane fade show active" id="today">
                <div class="row mb-3">
                    <div class="col-12">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-calendar-day me-2 text-primary"></i>
                                    Today's Lectures - <%= moment().format('dddd, MMMM Do YYYY') %>
                                </h5>
                                <p class="card-text text-muted mb-0">
                                    Total lectures today: <strong><%= todaySchedule.length %></strong>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <% if (todaySchedule.length > 0) { %>
                        <% todaySchedule.forEach(function(lecture, index) { %>
                            <div class="col-lg-6 mb-3">
                                <div class="card lecture-item h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0">
                                                <i class="fas fa-book me-1"></i>
                                                <%= lecture.subject %>
                                            </h6>
                                            <span class="badge bg-<%= lecture.lectureType === 'Lab' ? 'warning' : lecture.lectureType === 'Tutorial' ? 'info' : lecture.lectureType === 'Seminar' ? 'success' : 'primary' %>">
                                                <%= lecture.lectureType %>
                                            </span>
                                        </div>
                                        
                                        <div class="lecture-time mb-2">
                                            <i class="fas fa-clock me-1"></i>
                                            <%= moment(lecture.startTime).format('h:mm A') %> - 
                                            <%= moment(lecture.endTime).format('h:mm A') %>
                                        </div>
                                        
                                        <div class="mb-2">
                                            <i class="fas fa-user me-1"></i>
                                            <strong><%= lecture.teacher ? lecture.teacher.name : 'TBA' %></strong>
                                            <% if (lecture.teacher && lecture.teacher.department) { %>
                                                <br><small class="text-muted ms-3"><%= lecture.teacher.department %></small>
                                            <% } %>
                                        </div>
                                        
                                        <div class="mb-2">
                                            <i class="fas fa-map-marker-alt me-1"></i>
                                            <%= lecture.classroom %>
                                        </div>
                                        
                                        <% if (lecture.chapter) { %>
                                            <div class="mb-2">
                                                <i class="fas fa-bookmark me-1"></i>
                                                <small class="text-muted">Chapter: <%= lecture.chapter %></small>
                                            </div>
                                        <% } %>
                                        
                                        <div class="mt-3">
                                            <div class="btn-group btn-group-sm">
                                                <a href="/lectures/edit/<%= lecture._id %>" class="btn btn-outline-primary">
                                                    <i class="fas fa-edit me-1"></i>Edit
                                                </a>
                                                <% if (lecture.isActive) { %>
                                                    <span class="btn btn-outline-success">
                                                        <i class="fas fa-check-circle me-1"></i>Active
                                                    </span>
                                                <% } else { %>
                                                    <span class="btn btn-outline-secondary">
                                                        <i class="fas fa-pause-circle me-1"></i>Inactive
                                                    </span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body text-center py-5">
                                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                    <h4 class="text-muted">No Lectures Today</h4>
                                    <p class="text-muted">There are no lectures scheduled for today</p>
                                    <a href="/lectures/add" class="btn btn-primary">
                                        <i class="fas fa-plus me-1"></i>Add Lecture
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Weekly Schedule -->
            <div class="tab-pane fade" id="week">
                <div class="row mb-3">
                    <div class="col-12">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-calendar-week me-2 text-primary"></i>
                                    Weekly Schedule Overview
                                </h5>
                                <p class="card-text text-muted mb-0">
                                    Complete weekly schedule for all days
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <% 
                    const daysOfWeek = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
                    daysOfWeek.forEach(function(day) { 
                        const dayLectures = weeklySchedule[day] || [];
                    %>
                        <div class="col-lg-6 mb-4">
                            <div class="card schedule-day-card h-100">
                                <div class="schedule-day-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-calendar-day me-2"></i>
                                        <%= day %>
                                        <span class="badge bg-light text-dark ms-2"><%= dayLectures.length %></span>
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <% if (dayLectures.length > 0) { %>
                                        <% dayLectures.forEach(function(lecture) { %>
                                            <div class="lecture-item mb-3">
                                                <div class="d-flex justify-content-between align-items-start mb-1">
                                                    <strong class="text-primary"><%= lecture.subject %></strong>
                                                    <span class="badge bg-<%= lecture.lectureType === 'Lab' ? 'warning' : lecture.lectureType === 'Tutorial' ? 'info' : lecture.lectureType === 'Seminar' ? 'success' : 'primary' %>">
                                                        <%= lecture.lectureType %>
                                                    </span>
                                                </div>
                                                
                                                <div class="lecture-time mb-1">
                                                    <%= moment(lecture.startTime).format('h:mm A') %> - 
                                                    <%= moment(lecture.endTime).format('h:mm A') %>
                                                </div>
                                                
                                                <div class="small text-muted mb-1">
                                                    <i class="fas fa-user me-1"></i>
                                                    <%= lecture.teacher ? lecture.teacher.name : 'TBA' %>
                                                </div>
                                                
                                                <div class="small text-muted mb-2">
                                                    <i class="fas fa-map-marker-alt me-1"></i>
                                                    <%= lecture.classroom %>
                                                </div>
                                                
                                                <div class="d-flex gap-1">
                                                    <a href="/lectures/edit/<%= lecture._id %>" 
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <% if (!lecture.isActive) { %>
                                                        <span class="btn btn-outline-secondary btn-sm">
                                                            <i class="fas fa-pause"></i>
                                                        </span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }); %>
                                    <% } else { %>
                                        <div class="text-center py-3">
                                            <i class="fas fa-calendar-times text-muted mb-2" style="font-size: 2rem;"></i>
                                            <p class="text-muted mb-2">No lectures</p>
                                            <a href="/lectures/add" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-plus me-1"></i>Add Lecture
                                            </a>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5 py-3 bg-light">
        <div class="container">
            <div class="text-center text-muted">
                <small>&copy; <%= new Date().getFullYear() %> DigiBoard Admin Dashboard. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
    
    <script>
        // Auto-refresh schedule every 2 minutes
        setInterval(function() {
            window.location.reload();
        }, 2 * 60 * 1000); // 2 minutes

        // Add visual indicator for current time
        function highlightCurrentLecture() {
            const now = new Date();
            const currentTime = now.getHours() * 60 + now.getMinutes();
            
            document.querySelectorAll('.lecture-item').forEach(function(item) {
                const timeText = item.querySelector('.lecture-time').textContent;
                const timeMatch = timeText.match(/(\d+):(\d+)\s*(AM|PM)\s*-\s*(\d+):(\d+)\s*(AM|PM)/);
                
                if (timeMatch) {
                    let startHour = parseInt(timeMatch[1]);
                    const startMin = parseInt(timeMatch[2]);
                    const startPeriod = timeMatch[3];
                    
                    let endHour = parseInt(timeMatch[4]);
                    const endMin = parseInt(timeMatch[5]);
                    const endPeriod = timeMatch[6];
                    
                    // Convert to 24-hour format
                    if (startPeriod === 'PM' && startHour !== 12) startHour += 12;
                    if (startPeriod === 'AM' && startHour === 12) startHour = 0;
                    if (endPeriod === 'PM' && endHour !== 12) endHour += 12;
                    if (endPeriod === 'AM' && endHour === 12) endHour = 0;
                    
                    const startTime = startHour * 60 + startMin;
                    const endTime = endHour * 60 + endMin;
                    
                    if (currentTime >= startTime && currentTime <= endTime) {
                        item.classList.add('border-success', 'border-3');
                        item.style.background = 'linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%)';
                        
                        // Add "NOW" indicator
                        if (!item.querySelector('.now-indicator')) {
                            const nowBadge = document.createElement('span');
                            nowBadge.className = 'badge bg-success now-indicator position-absolute';
                            nowBadge.style.top = '10px';
                            nowBadge.style.right = '10px';
                            nowBadge.innerHTML = '<i class="fas fa-circle me-1"></i>NOW';
                            item.style.position = 'relative';
                            item.appendChild(nowBadge);
                        }
                    }
                }
            });
        }

        // Run highlighting on page load and every minute
        highlightCurrentLecture();
        setInterval(highlightCurrentLecture, 60000); // 1 minute

        // Add time until next lecture
        function addTimeUntilNext() {
            const now = new Date();
            const lectureItems = document.querySelectorAll('.lecture-item');
            
            lectureItems.forEach(function(item) {
                const timeText = item.querySelector('.lecture-time').textContent;
                const timeMatch = timeText.match(/(\d+):(\d+)\s*(AM|PM)/);
                
                if (timeMatch) {
                    let hour = parseInt(timeMatch[1]);
                    const min = parseInt(timeMatch[2]);
                    const period = timeMatch[3];
                    
                    // Convert to 24-hour format
                    if (period === 'PM' && hour !== 12) hour += 12;
                    if (period === 'AM' && hour === 12) hour = 0;
                    
                    const lectureTime = new Date();
                    lectureTime.setHours(hour, min, 0, 0);
                    
                    if (lectureTime > now) {
                        const diff = lectureTime - now;
                        const hours = Math.floor(diff / (1000 * 60 * 60));
                        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                        
                        if (hours === 0 && minutes <= 30) {
                            const timeUntil = document.createElement('small');
                            timeUntil.className = 'text-warning fw-bold';
                            timeUntil.innerHTML = `<i class="fas fa-hourglass-half me-1"></i>Starts in ${minutes} minutes`;
                            item.querySelector('.lecture-time').appendChild(document.createElement('br'));
                            item.querySelector('.lecture-time').appendChild(timeUntil);
                        }
                    }
                }
            });
        }

        addTimeUntilNext();
    </script>
</body>
</html>
