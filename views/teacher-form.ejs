<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= action %> Teacher - DigiBoard Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                DigiBoard Admin
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/schedule">
                            <i class="fas fa-calendar-alt me-1"></i>Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/lectures">
                            <i class="fas fa-book me-1"></i>Lectures
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/teachers">
                            <i class="fas fa-users me-1"></i>Teachers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/quick-update">
                            <i class="fas fa-bolt me-1"></i>Quick Update
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                            <%= user || 'Admin' %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2>
                            <i class="fas fa-<%= action === 'Add' ? 'plus' : 'edit' %> me-2 text-primary"></i>
                            <%= action %> Teacher
                        </h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/teachers">Teachers</a></li>
                                <li class="breadcrumb-item active"><%= action %> Teacher</li>
                            </ol>
                        </nav>
                    </div>
                    <div>
                        <a href="/teachers" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Teachers
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Teacher Form -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-user-edit me-2"></i>
                            Teacher Information
                        </h5>
                    </div>
                    
                    <div class="card-body">
                        <form method="POST" action="/teachers/save" id="teacherForm">
                            <% if (teacher) { %>
                                <input type="hidden" name="id" value="<%= teacher._id %>">
                            <% } %>
                            
                            <!-- Basic Information -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h6 class="text-primary mb-3">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Basic Information
                                    </h6>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">
                                        <i class="fas fa-user me-1"></i>Full Name *
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="name" 
                                           name="name" 
                                           value="<%= teacher ? teacher.name : '' %>" 
                                           required
                                           placeholder="Enter full name">
                                    <div class="invalid-feedback">Please provide a valid name.</div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">
                                        <i class="fas fa-envelope me-1"></i>Email Address *
                                    </label>
                                    <input type="email" 
                                           class="form-control" 
                                           id="email" 
                                           name="email" 
                                           value="<%= teacher ? teacher.email : '' %>" 
                                           required
                                           placeholder="Enter email address">
                                    <div class="invalid-feedback">Please provide a valid email address.</div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="department" class="form-label">
                                        <i class="fas fa-building me-1"></i>Department *
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="department" 
                                           name="department" 
                                           value="<%= teacher ? teacher.department : '' %>" 
                                           required
                                           placeholder="e.g., Computer Science">
                                    <div class="invalid-feedback">Please provide a department.</div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="phone" class="form-label">
                                        <i class="fas fa-phone me-1"></i>Phone Number
                                    </label>
                                    <input type="tel" 
                                           class="form-control" 
                                           id="phone" 
                                           name="phone" 
                                           value="<%= teacher ? teacher.phone : '' %>" 
                                           placeholder="Enter phone number">
                                </div>
                            </div>

                            <!-- Professional Details -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h6 class="text-primary mb-3">
                                        <i class="fas fa-briefcase me-1"></i>
                                        Professional Details
                                    </h6>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="office" class="form-label">
                                        <i class="fas fa-map-marker-alt me-1"></i>Office Location
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="office" 
                                           name="office" 
                                           value="<%= teacher ? teacher.office : '' %>" 
                                           placeholder="e.g., Room 201, CS Building">
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label for="experience" class="form-label">
                                        <i class="fas fa-calendar me-1"></i>Years of Experience
                                    </label>
                                    <input type="number" 
                                           class="form-control" 
                                           id="experience" 
                                           name="experience" 
                                           value="<%= teacher ? teacher.experience : '' %>" 
                                           min="0" 
                                           placeholder="Enter years of experience">
                                </div>
                                
                                <div class="col-12 mb-3">
                                    <label for="profileImage" class="form-label">
                                        <i class="fas fa-image me-1"></i>Profile Image URL
                                    </label>
                                    <input type="url" 
                                           class="form-control" 
                                           id="profileImage" 
                                           name="profileImage" 
                                           value="<%= teacher ? teacher.profileImage : '' %>" 
                                           placeholder="https://example.com/profile.jpg">
                                    <div class="form-text">Optional: Provide a URL to the teacher's profile image</div>
                                </div>
                            </div>

                            <!-- Subjects and Qualifications -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h6 class="text-primary mb-3">
                                        <i class="fas fa-graduation-cap me-1"></i>
                                        Academic Information
                                    </h6>
                                </div>
                                
                                <div class="col-12 mb-3">
                                    <label for="subjects" class="form-label">
                                        <i class="fas fa-book me-1"></i>Subjects Taught
                                    </label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="subjects" 
                                           name="subjects" 
                                           value="<%= teacher && teacher.subjects ? teacher.subjects.join(', ') : '' %>" 
                                           placeholder="e.g., Mathematics, Physics, Chemistry">
                                    <div class="form-text">Separate multiple subjects with commas</div>
                                </div>
                                
                                <div class="col-12 mb-3">
                                    <label for="qualifications" class="form-label">
                                        <i class="fas fa-certificate me-1"></i>Qualifications
                                    </label>
                                    <textarea class="form-control" 
                                              id="qualifications" 
                                              name="qualifications" 
                                              rows="3" 
                                              placeholder="e.g., PhD Computer Science, M.Tech Information Technology"><%= teacher && teacher.qualifications ? teacher.qualifications.join(', ') : '' %></textarea>
                                    <div class="form-text">Separate multiple qualifications with commas</div>
                                </div>
                            </div>

                            <!-- Form Actions -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex gap-2 justify-content-end">
                                        <a href="/teachers" class="btn btn-outline-secondary">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-1"></i>
                                            <%= action %> Teacher
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5 py-3 bg-light">
        <div class="container">
            <div class="text-center text-muted">
                <small>&copy; <%= new Date().getFullYear() %> DigiBoard Admin Dashboard. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
    
    <script>
        // Form validation
        document.getElementById('teacherForm').addEventListener('submit', function(e) {
            if (!this.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            this.classList.add('was-validated');
        });

        // Preview profile image
        document.getElementById('profileImage').addEventListener('input', function() {
            const url = this.value;
            const preview = document.getElementById('imagePreview');
            
            if (preview) {
                preview.remove();
            }
            
            if (url) {
                const img = document.createElement('img');
                img.id = 'imagePreview';
                img.src = url;
                img.className = 'mt-2 rounded';
                img.style.maxWidth = '100px';
                img.style.maxHeight = '100px';
                img.onerror = function() {
                    this.style.display = 'none';
                };
                this.parentNode.appendChild(img);
            }
        });

        // Auto-format subjects and qualifications
        document.getElementById('subjects').addEventListener('blur', function() {
            const subjects = this.value.split(',').map(s => s.trim()).filter(s => s.length > 0);
            this.value = subjects.join(', ');
        });

        document.getElementById('qualifications').addEventListener('blur', function() {
            const qualifications = this.value.split(',').map(q => q.trim()).filter(q => q.length > 0);
            this.value = qualifications.join(', ');
        });
    </script>
</body>
</html>
